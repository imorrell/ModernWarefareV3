
@{
    ViewData["Title"] = "RegisterUser";
}

<h1 style=" text-align:center; color: white;"><strong>Register User</strong></h1>
<br />

<form asp-controller="Home" asp-action="SaveUser" method="post">
    <div class="form-group">
        <label>Name</label>
        <input class="form-control" type="text" name="Name" value="" required />
    </div><br />
    <div class="form-group">
        <label>Email</label>
        <input class="form-control" type="email" name="Email" value="" required />
    </div> <br />
    <div class="form-group">
        <label>Password</label>
        <input class="form-control" type="text" name="Password" value="" required />
    </div> <br /> <br />
    <button type="submit">Register User</button>
</form>

